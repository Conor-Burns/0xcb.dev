{
	"$schema": "https://frontmatter.codes/frontmatter.schema.json",
	"frontMatter.preview.host": "https://localhost:5173",
	"frontMatter.taxonomy.contentTypes": [
		{
			"name": "Article",
			"pageBundle": false,
			"previewPath": null,
			"fields": [
				{
					"title": "Slug",
					"name": "slug",
					"type": "slug"
				},
				{
					"title": "Title",
					"name": "title",
					"type": "string"
				},
				{
					"title": "Excerpt",
					"name": "excerpt",
					"type": "string"
				},
				{
					"title": "Cover Image",
					"name": "coverImage",
					"type": "image"
				},
				{
					"title": "Preview Image",
					"name": "previewImage",
					"type": "image",
					"isPreviewImage": true
				},
				{
					"title": "Publish Date",
					"name": "date",
					"type": "datetime",
					"default": "{{now}}",
					"isPublishDate": true
				},
				{
					"title": "Last modified date",
					"name": "updated",
					"type": "datetime",
					"isModifiedDate": true
				},
				{
					"title": "Is hidden",
					"name": "hidden",
					"type": "draft"
				},
				{
					"title": "Tags",
					"name": "tags",
					"type": "tags"
				},
				{
					"title": "Categories",
					"name": "categories",
					"type": "categories"
				}
			]
		},
		{
			"name": "Work Experience",
			"pageBundle": false,
			"previewPath": null,
			"fields": [
				{
					"title": "Title",
					"name": "title",
					"type": "string"
				}
			]
		}
	],
	"frontMatter.framework.id": "other",
	"frontMatter.content.publicFolder": "[[workspace]]/static",
	"frontMatter.content.pageFolders": [
		{
			"title": "articles",
			"path": "[[workspace]]/cms/articles",
			"contentTypes": ["Article"],
			"filePrefix": "yyyy-MM-dd"
		},
		{
			"title": "work-experience",
			"path": "[[workspace]]/cms/work-experience",
			"contentTypes": ["Work Experience"],
			"filePrefix": ""
		}
	]
}
